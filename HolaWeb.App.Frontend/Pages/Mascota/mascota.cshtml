@page
@model HospiEnCasa.App.Fronted.Pages.mascotaModel
@{
}
<h1>Mascotas</h1>
<form method="get">
    <div class="form-group">

        <p>
            Mascota: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <thead>
        <tr>
            <td style="text-align: center"><strong>Id</strong></td>
            <td style="text-align: center"><strong>Nombre</strong></td>
            <td style="text-align: center"><strong>Edad</strong></td>
            <td style="text-align: center"><strong>Raza</strong></td>
            <td style="text-align: center"><strong>Información</strong></td>
            <td style="text-align: center"><strong>Editar</strong></td>
        </tr>
    </thead>
    @foreach (var mascota in Model.Mascota)
    {
        <tr>
            <td style="text-align: center">@mascota.Id</td>
            <td style="text-align: center">@mascota.Nombre</td>
            <td style="text-align: center">@mascota.Edad</td>
            <td style="text-align: center">@mascota.Raza</td>
            <td style="text-align: center">
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-MascotaId="@mascota.Id">
                    <i class="fas fa-info-circle fa-lg"></i Detalle Mascota</a>
            </td>
            <td style="text-align: center">
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-MascotaId="@mascota.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>
<a asp-page=".\Edit" class="btn btn-primary">Adicionar Mascota</a>