@page
@model HospiEnCasa.App.Fronted.Pages.visitaModel
@{
}
<h1>Visitas</h1>
<form method="get">
    <div class="form-group">

        <p>
            Visita: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    @foreach (var visita in Model.Visita)
    {
        <tr>
            <td>@visita.Id</td>
            <td>@visita.IdMascota</td>
            <td>@visita.IdVeterinario</td>
            <td>@visita.Temperatura</td>
            <td>@visita.peso</td>
            <td>@visita.FrecuenciaRes</td>
            <td>@visita.FrecuenciaCar</td>
            <td>@visita.EstadoAnimo</td>
            <td>@visita.Fecha</td>
            <td>@visita.Recomendaciones</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-VisitaId="@visita.Id">
                    <i class="fas fa-info-circle fa-lg"></i Detalle Visita</a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-VisitaId="@visita.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>
<a asp-page=".\Edit" class="btn btn-primary">Adicionar visita</a>