@page
@model HospiEnCasa.App.Fronted.Pages.visitaModel
@{
}
<h1>Visitas</h1>
<form method="get">
    <div class="form-group">

        <p>
            Visita: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda" />
            <input type="submit" value="Filtrar" />
        </p>
</form>
<table class="table">
    <thead>
        <tr>
            <td style="text-align: center"><strong>Id</strong></td>
            <td style="text-align: center"><strong>Id Mascota</strong></td>
            <td style="text-align: center"><strong>Id Veterinario</strong></td>
            <td style="text-align: center"><strong>Temperatura</strong></td>
            <td style="text-align: center"><strong>Peso</strong></td>
            <td style="text-align: center"><strong>Frecuencia respiratoria</strong></td>
            <td style="text-align: center"><strong>Frecuencia cardiaca</strong></td>
            <td style="text-align: center"><strong>Estado de animo</strong></td>
            <td style="text-align: center"><strong>Fecha</strong></td>
            <td style="text-align: center"><strong>Recomendaciones</strong></td>
            <td style="text-align: center"><strong>Información</strong></td>
            <td style="text-align: center"><strong>Editar</strong></td>
        </tr>
    </thead>
    @foreach (var visita in Model.Visita)
    {
        <tr>
            <td style="text-align: center">@visita.Id</td>
            <td style="text-align: center">@visita.IdMascota</td>
            <td style="text-align: center">@visita.IdVeterinario</td>
            <td style="text-align: center">@visita.Temperatura</td>
            <td style="text-align: center">@visita.peso</td>
            <td style="text-align: center">@visita.FrecuenciaRes</td>
            <td style="text-align: center">@visita.FrecuenciaCar</td>
            <td style="text-align: center">@visita.EstadoAnimo</td>
            <td style="text-align: center">@visita.Fecha</td>
            <td style="text-align: center">@visita.Recomendaciones</td>
            <td style="text-align: center">
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-VisitaId="@visita.Id">
                    <i class="fas fa-info-circle fa-lg"></i Detalle Visita</a>
            </td>
            <td style="text-align: center">
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-VisitaId="@visita.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>
<a asp-page=".\Edit" class="btn btn-primary">Adicionar visita</a>